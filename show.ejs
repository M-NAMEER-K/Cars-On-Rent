<%layout("/layouts/boilerplate")%>
<div class="row mt-3">
      <div class="col-8 offset-2">
<body>
    <h3> Listing Details:</h3>
    <div class="card col-6 offset-2 show-card">
      <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_image">
      <div class="card-body">
        <h5 class="card-title"><%=listing.model%></h5>
        <p class="card-text">
            <b><%=listing.title%></b>
            <%=listing.desc%><br>
            <%=listing.category%><br>
            <%=listing.price%>
      </p>     
      </div>
    </div>
          <div class="book-box">
            <h2 class="r">Rent A Car</h2>
            
              <a href="/listings/<%=listing._id%>/book" class="btn btn-dark book-btn">Book</a>
      </div>
          <div class="btns">
            
          <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark edit-btn col-1 offset-2">Edit</a> &nbsp; &nbsp;
          <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">

            <button class="btn btn-dark  " >Delete</button>
          </form>
        
                   
          </div>
              
            
              
          </body>
          </div>
          </div>
